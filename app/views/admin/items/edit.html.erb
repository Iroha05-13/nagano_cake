<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">

      <h5 class="mt-4 col-md-2 py-1 text-center">商品編集</h5>

      <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch, local: true do |f| %>
        <div class="form-group">
          <table class="table table-borderless col-8">
            <tr>
              <td class="col-3"><%= f.label :image, "商品画像" %></td>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>
            <tr>
              <td><%= f.label :name, "商品名" %></td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td><%= f.label :introduction, "商品説明" %></td>
              <td><%= f.text_area :introduction %></td>
            </tr>
            <tr>
              <td><%= f.label :genre_id, "ジャンル" %></td>
              <td><%= f.collection_select(:genre_id, @genres, :id, :name) %></td>
            </tr>
            <tr>
              <td><%= f.label :price, "税抜価格" %></td>
              <td><%= f.text_field :price %> 円</td>
            </tr>
            <tr>
              <td><%= f.label :is_active, "販売ステータス" %></td>
              <td>
                <div class="radio_button">
                  <%= f.radio_button :is_active, true %>
                  <%= f.label :is_active, "販売中", value: true %>
                  <%= f.radio_button :is_active, false %>
                  <%= f.label :is_active, "販売停止中", value: false %>
                </div>
              </td>
            </tr>
          </table>
        </div>

        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-success px-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
