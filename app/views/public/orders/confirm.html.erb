<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h5 class="bg-activ">注文情報確認</h5>

      <table class="table table-bordered table-sm">
        <tr class="table-activ">
          <td>商品名</td>
          <td>単価(税込)</td>
          <td>数量</td>
          <td>小計</td>
        </tr>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.get_image(50,40) %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
          </tr>
        <% end %>
      </table>

      <table class="table table-bordered table-sm">
        <tr>
          <td class="table-activ">送料</td>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <td class="table-activ">商品合計</td>
          <td><%= @total %></td>
        </tr>
        <tr>
          <td class="table-activ">請求金額</td>
          <td><%= @order.total_price %></td>
        </tr>
      </table>

      <strong>支払方法</strong>
      <%= @order.payment_i18n %>
      <p>
        <strong>お届け先</strong>
        〒<%= @order.postal_code %>
        <%= @order.address %>
        <%= @order.name %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= form_with model: @order, url: "/orders", method: :post, local: true do |f| %>
        <div class="form-group">
          <%= f.hidden_field :name, :value => @order.name %>
          <%= f.hidden_field :address, :value => @order.address %>
          <%= f.hidden_field :postal_code, :value => @order.postal_code %>
          <%= f.hidden_field :payment, :value => @order.payment %>
          <%= f.hidden_field :status, :value => @order.status %>
          <%= f.hidden_field :total_price, :value => @order.total_price %>
          <%= f.hidden_field :postage, :value => @order.postage %> <!--hidden_fieldはカラムに対して行う-->
          <%= f.submit "注文を確定する", class: "btn btn-success btn-sm px-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>