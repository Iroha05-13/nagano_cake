<div class="container">
  <div class="row">
    <div class="col-md-8 pb-5">
      <h5 class="my-4 col-md-5 py-1 text-center"><%= @customer.name %><span>さんの</span>会員詳細</h5>

      <table class="table table-borderless table-sm">
        <tr>
          <td class="col-3">会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @customer.name_s %></td>
        </tr>
        <tr>
          <td>ふりがな</td>
          <td><%= @customer.name_kana_s %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @customer.is_active == true %>
              有効
            <% else %>
              退会
            <% end %>
          </td>
        </tr>
      </table>

      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success offset-md-3" %>
    </div>
  </div>
</div>
