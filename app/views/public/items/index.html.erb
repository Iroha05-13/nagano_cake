<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-2">
      <h3><strong>商品一覧</strong></h3>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_image(150,150) %><br>
              <%= item.name %><br>
              ￥<%= (item.price*1.1).floor %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
