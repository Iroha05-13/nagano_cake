<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h5 class="my-4 col-md-4 py-1 text-center"><%= @customer.last_name + @customer.first_name %><span>さんの</span>会員情報編集</h5>

      <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch, local: true do |f| %>
        <div class="form-group">
          <table class="table table-borderless">
            <tr>
              <td class="col-3">会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <td><%= f.label :name, "氏名" %></td>
              <td>
                <%= f.text_field :last_name %>
                <%= f.text_field :first_name %>
              </td>
            </tr>
            <tr>
              <td><%= f.label :name_kana, "ふりがな" %></td>
              <td>
                <%= f.text_field :last_name_kana %>
                <%= f.text_field :first_name_kana %>
              </td>
            </tr>
            <tr>
              <td><%= f.label :postal_code, "郵便番号" %></td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td><%= f.label :address, "住所" %></td>
              <td><%= f.text_field :address, class: "col-8" %></td>
            </tr>
            <tr>
              <td><%= f.label :telephone_number, "電話番号" %></td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td><%= f.label :is_active, "会員ステータス" %></td>
              <td>
                <div class="radio_button">
                  <%= f.radio_button :is_active, true %>
                  <%= f.label :is_active, "有効", value: true %>
                  <%= f.radio_button :is_active, false %>
                  <%= f.label :is_active, "退会", value: false %>
                </div>
              </td>
            </tr>
          </table>
        </div>

        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>