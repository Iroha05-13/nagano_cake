<div class="container">
  <div class="row">
    <div class="col-md-9 offset-md-3">
      <div class="row">
        <div class="col-md-5">
          <%= image_tag @item.get_image(280,280) %>
        </div>
        <div class="col-md-6">
          <strong><%= @item.name %></strong><br>
          <%= @item.introduction %><br>
          <br>
          <strong>￥<%= (@item.price*1.1).floor %>(税込)</strong>
        </div>
      </div>

    </div>
  </div>
</div>
