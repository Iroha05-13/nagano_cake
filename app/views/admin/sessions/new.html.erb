<div class="container mb-5 pb-5">
  <div class="row">
    <div class="col-md-10 mx-auto mb-5 pb-5">
      <h5 class="my-4 col-md-3 py-1 text-center">管理者ログイン</h5>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table table-sm table-borderless col-8 mx-auto">
          <tr>
            <td class="col-3"><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-8" %></td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード" %></td>
            <td><%= f.password_field :password, autocomplete: "current-password", class: "col-8" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "ログイン", class: "btn btn-primary btn-sm px-4 mt-3 mb-5" %></td>
          </tr>
        </table>
      <% end %>

      <%= render "admin/shared/links" %>

    </div>
  </div>
</div>
