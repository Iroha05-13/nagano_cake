<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="bg-light">会員情報編集</h5>

      <%= form_with model: @customer, url: customers_path(@customer.id), method: :patch, local: true do |f| %>
        <div class="form-group">
          <table class="table table-borderless table-sm">
            <tr>
              <td><%= f.label :name, "氏名" %></td>
              <td>
                <%= f.text_field :last_name %>
                <%= f.text_field :first_name %>
              </td>
            </tr>
            <tr>
              <td><%= f.label :name_kana, "ふりがな" %></td>
              <td>
                <%= f.text_field :last_name_kana %>
                <%= f.text_field :first_name_kana %>
              </td>
            </tr>
            <tr>
              <td><%= f.label :postal_code, "郵便番号" %></td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td><%= f.label :address, "住所" %></td>
              <td><%= f.text_field :address %></td>
            </tr>
            <tr>
              <td><%= f.label :telephone_number, "電話番号" %></td>
              <td><%= f.text_field :telephone_number %></td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.text_field :email %></td>
            </tr>
          </table>
        </div>

        <div class="form-group">
          <%= f.submit "編集内容を保存", class: "btn btn-success btn-sm px-5" %>
        </div>
      <% end %>

      <%= link_to "退会する", unsubscribe_path, class: "btn btn-danger btn-sm px-4" %>
    </div>
  </div>
</div>
