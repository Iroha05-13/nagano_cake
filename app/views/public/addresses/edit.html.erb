<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="bg-light col-2">配送先編集</h5>

      <%= form_with model: @address, url: address_path(@address.id), method: :patch, local: true do |f| %>
        <table class="table table-borderless table-sm">
          <tr>
            <td class="col-3"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
            <td><%= f.text_field :postal_code %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td class="col-3"><%= f.label :address, "住所" %></td>
            <td colspan="2"><%= f.text_field :address, class: "col-11" %></td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <td class="col-3"><%= f.label :name, "宛名" %></td>
            <td><%= f.text_field :name %></td>
            <td></td>
            <td><%= f.submit "変更内容を保存", class: "btn btn-success btn-sm px-3 from-control" %></td>
          </tr>
        </table>

      <% end %>
    </div>
  </div>
</div>
