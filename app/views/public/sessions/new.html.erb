<h5 class="bg-light">ログイン</h5>

<p class="bg-light">会員の方はこちらからログイン</p>

<%= form_with model: @customer, url: customer_session_path do |f| %>
  <table class="table table-borderless table-sm">
    <tr>
      <td><%= f.label :email, "メールアドレス" %></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>

    <tr>
      <td><%= f.label :password, "パスワード" %></td>
      <td><%= f.password_field :password, autocomplete: "current-password" %></td>
    </tr>
  </table>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary btn-sm px-4 my-4" %>
  </div>
<% end %>

<p class="bg-light">会員登録がお済みでない方</p>
<%= render "public/shared/links" %>
