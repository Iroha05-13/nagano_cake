<div>
  <h2>商品新規登録</h2>

  <%= form_with model: @item, url: "/admin/items", method: :post do |f| %>
    <div class="form-group">
      <%= f.label :item_image, "商品画像" %>
      <%= f.file_field :item_image, accept: "image/*" %>
    </div>

    <div class="form-group">
      <%= f.label :name, "商品名" %>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.label :introduction, "商品説明" %>
      <%= f.text_area :introduction %>
    </div>

    <!--<div class="form-group">-->
    <!--  <%= f.label :genre_id, "ジャンル" %>-->
    <!--  <%= f.select :genre_id, [] %>-->
    <!--</div>-->

    <div class="form-group">
      <%= f.label :price, "税抜き価格" %>
      <%= f.text_field :price %> 円
    </div>

    <div class="form-group">
      <%= f.label :is_active, "販売ステータス" %>
      <div class="radio_button">
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "販売中", value: true %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, "販売停止中", value: false %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
</div>
