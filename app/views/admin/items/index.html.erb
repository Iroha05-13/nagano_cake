<div>
  <div>
    <div>
      <h5 class="bg-light">商品一覧</h5>
      <%= link_to "+", new_admin_item_path, class: "btn btn-sm" %>

      <table class="table table-borderless table-sm">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <% @items.each do |item| %>
          <tr>
            <td><%= item.id.to_i %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td></td>
            <td>
              <% if item.is_active == true %>
                販売中
              <% else %>
                販売停止中
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>

      <%= paginate @items %>
    </div>
  </div>
</div>
