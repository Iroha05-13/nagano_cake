<div class="container">
  <div class="row">
    <div class="col-md-11 mx-auto mb-5 pb-3">
      <h5 class="offset-md-1 mt-4 text-center col-2">商品一覧</h5>
      <p class="col-1 offset-md-11"><%= link_to "＋", new_admin_item_path, class: "btn btn-light btn-sm" %></p>

      <table class="table table-borderless table-sm">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <% @items.each do |item| %>
          <tr>
            <td><%= item.id.to_i %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active == true %>
                <strong class="text-success">販売中</strong>
              <% else %>
                <strong class="text-secondary">販売停止中</strong>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>

      <%= paginate @items %>
    </div>
  </div>
</div>
