<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h5 class="my-4 col-md-2 py-1 text-center">注文履歴一覧</h5>

      <table class="table table-sm">
        <tr class="table-active">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>

        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order.id) %>
            </td>
            <td><%= order.customer.name %></td>
            <td><%= order.order_details.all.sum(:amount) %></td>
            <td><%= order.status_i18n %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
