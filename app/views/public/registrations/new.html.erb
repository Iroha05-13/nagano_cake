<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="name-field">
    <%= f.label :last_name, "姓"%>
    <%= f.label :first_name, "名" %><br>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %><br>
    <%= f.label :last_name_kana, "姓(かな)" %>
    <%= f.label :first_name_kana, "名(かな)" %><br>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="address-field">
    <%= f.label :postal_code, "郵便番号" %><br>
    <%= f.text_field :postal_code %><br>
    <%= f.label :address, "住所" %><br>
    <%= f.text_area :address %><br>
    <%= f.label :telephone_number, "電話番号" %><br>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
